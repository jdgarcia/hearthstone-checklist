{
  "name": "hearthstone-checklist",
  "version": "0.0.1",
  "description": "A checklist app for your Hearthstone collection.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdgarcia/hearthstone-checklist"
  },
  "dependencies": {
    "babel-preset-react": "^6.1.18",
    "react": "^0.14.2",
    "react-dom": "^0.14.2"
  },
  "scripts": {
    "copy": "ncp src build",
    "compile-react": "babel --presets react src --out-file build/compiled-react.js",
    "browserify": "browserify build/compiled-react.js -o build/bundle.js",
    "build": "npm run copy && npm run compile-react && npm run browserify"
  },
