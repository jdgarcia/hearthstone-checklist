{
  "name": "hearthstone-checklist",
  "version": "0.0.1",
  "description": "A checklist app for your Hearthstone collection.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdgarcia/hearthstone-checklist"
  },
  "dependencies": {
    "babel-preset-react": "^6.1.18",
    "ncp": "^2.0.0",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "rimraf": "^2.4.4"
  },
  "scripts": {
    "copy": "./node_modules/.bin/ncp src build",
    "compile-react": "babel --presets react src --out-dir build",
    "browserify": "browserify build/index.js -o build/bundle.js",
    "clean-jsx": "./node_modules/.bin/rimraf build/**/*.jsx",
    "build": "npm run copy && npm run compile-react && npm run browserify && npm run clean-jsx"
  },
  "author": "Jose Garcia",
  "email": "garciajd90@gmail.com",
  "license": "ISC"
}
